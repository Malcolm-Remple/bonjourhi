<div class="container mt-3">
  <h1><%= @user.first_name %></h1>
  <h3><%= @user.city %></h3>

  <%= simple_form_for [@user, @meetup] do |f| %>
    <%= f.input :seeking_lang, as: :select, label: "I want to practice", collection: @seeking_langs, include_blank: false, include_hidden: false %>
    <%= f.input :sharing_lang, as: :select, label: "I want to share", collection: @sharing_langs, include_blank: false, include_hidden: false %>
    <%= f.input :date, label: "Date", html5: true, required: true %>
    <%= f.input :start_time, label: "Start Time", :as => :time, :minute_step => 15 %>
    <%= f.input :duration, label: "Duration", collection: [['1 hour', 60], ['1.5 hours', 90], ['2 hours', 120]], include_blank: false, include_hidden: false %>
    <%= f.input :location, label: "Location", required: true %>
    <%= f.input :greeting, label: "Greeting (max 150 characters)", error: "Message too long (under 150 characters)" %>
    <%= f.submit "Send request", class: "bh-btn-solid-lg-show" %>
  <% end %>
</div>
