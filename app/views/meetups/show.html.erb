<div class="container">
  
  <div class="bh-flex-container"> 
    <div class="bh-flex-element">  
      <img class="bh-avatar-lg" src="<%= @meetup.opposite_user(current_user).photo %>">
    </div>
    
    <div class="bh-flex-element">
      <h3><b><%= @meetup.opposite_user(current_user).first_name %></b></h3>
      <% if @meetup.confirmed %>
        <p>Status: Confirmed</p>
      <% else %>
        <p>Status: <span id="pending">Pending</span></p>
      <% end %>
    </div>
  </div>
  
  <div class="bh-flex-container">
    <p> <%=  @meetup.seeking_lang.code %> | <%= @meetup.sharing_lang.code %> </p>
  </div>
  
  <div class="bh-text-body">
    <p>When: <%= "#{@meetup.date.strftime("%d/%m/%Y")},#{@meetup.start_time.strftime('%H:%M')} - #{@meetup.end_time.strftime('%H:%M')}" %>
      
    </p>
    <p>Where: <%= @meetup.location %></p>
  </div>

  <div class="bh-text-body">
    <h3><b>Bio</b></h3>
    <p><%=  %></p>
  </div>
    
</div>

