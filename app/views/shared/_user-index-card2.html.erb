<div class="container">
  <div class="bh-card-user-index mb-1">
    <div class="bh-grid-user-index">
      <!-- user avatar -->
      <div>
        <%= image_tag user.photo || "https://images.unsplash.com/photo-1534528741775-53994a69daeb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=80", class: "bh-avatar-sm" %>
      </div>
      <!-- user card info -->
      <div class="bh-card-user-index-info">
        <p style="font-weight: bold; color: black;"><%= user.first_name %></p>
        <p><%= user.city %></p>
      </div>
      <!-- sharing languages -->
      <div class="bh-card-user-index-sharing">
        <div>
          <p>sharing</p>
        </div>
        <!-- build the progress bar by self -->
        <!-- filter(&:sharing) == filter{|user_language| user_language.sharing} -->

        <div class="language-part">
          <p class="language">
            <% user.user_languages.filter(&:sharing).each do |user_language| %>
            <div class="lang-pro">
              <%=  user_language.language.code %>
              <div style="background-color: #DDDDDD; width: 20px;">
                <div style ="width: <%= user_language.level %>; background-color: #80BD9E; height: 7px;"></div>
              </div>
            </div>
            <% end %>
          </p>
        </div>
      </div>
      <div class="bh-card-user-index-practicing">
        <div>
          <p>practicing</p>
        </div>
        <div class="language-part">
          <p class="language">
            <% user.user_languages.filter(&:seeking).each do |user_language| %>
              <div class="lang-pro">
                <%=  user_language.language.code %>
                <div style="background-color: #DDDDDD; width: 20px;">
                  <div style ="width: <%= user_language.level %>; background-color: #F49342; height: 7px;"></div>
                </div>
             
            </div>
            <% end %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>

