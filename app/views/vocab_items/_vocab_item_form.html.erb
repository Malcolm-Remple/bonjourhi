
<%= simple_form_for(vocab_item, method: :post, remote: true) do |f| %>
  <%= f.association :language, collection: @new_vocab_form_languages, include_blank: false %>
  <%= f.input :content %>
  <%= button_tag type: 'submit', class: "btn btn-primary" do %>
      <i class="fas fa-plus-circle"></i> Add Vocab
  <% end %>
<% end %>
