<div class="container">
  <h1>Your vocab</h1>
  <i class="fas fa-plus-circle"> Add vocab</i><br>
  <%= render 'vocab_items/vocab_item_form', { vocab_item: @vocab_item }%>

  <%= select_tag "lang-selector", options_for_select(@language_option_array) %>

    <ul class="vocab-item-list" id="vocab-item-list">
        <% @vocab_items.each do |vi| %>
          <li class="vocab-item" data-lang-id="<%= vi.language.id %>">
            <%= vi.content %>
            <i class="fas fa-volume-up" data-text="<%= vi.content %>" data-iso-code="<%= vi.language.iso_code %>"></i>
          </li>
        <% end %>
      </ul>
</div>

