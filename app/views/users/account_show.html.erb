<div class="container">
  
  <div class="bh-flex-container"> 
    <div class="bh-flex-element">  
      <img class="bh-avatar-lg" src="<%= @user.photo %>">
    </div>
    <div class="bh-flex-element">
      <h3><b><%= @user.first_name %></b></h3>
      <p>Past Meetups: <%= @user.num_of_past_meetups %></p>
    </div>
  </div>
  
  <div class="bh-flex-container">
    
    <div class="bh-flex-element">
      
      <h3><b>Sharing</b></h3>
      
      <% @user.user_languages.filter(&:sharing).each do |user_language| %> 
        <div class=“lang-pro”>
          <%=  user_language.language.code %>
          <div style="background-color: #DDDDDD; width: 70px;">
            <div style ="width: <%= user_language.level %>; background-color: #80BD9E; height: 13px;"></div>
          </div>
        </div>
      <% end %>
    </div>
    
    
    <div class="bh-flex-element">
      <h3><b>Learning</b></h3>
        <% @user.user_languages.filter(&:seeking).each do |user_language| %>
          <div class=“lang-pro”>
            <%=  user_language.language.code %>
            <div style="background-color: #DDDDDD; width: 70px;">
              <div style ="width: <%= user_language.level %>; background-color: #F49342; height: 13px;"></div>
            </div>
          </div>
          <% end %>
    </div>
    
  </div>
    
  <div class="bh-text-body">
    <h3><b>Bio</b></h3>
    <p><%= @user.bio %></p>
  </div>
    
  <div class="bh-text-body">
    <h3><b>Reviews</b></h3>
    
    <p><b>author | date</b></p>   
    <p><%= @user.bio %></p>
    
    <p><b>author | date</b></p>   
    <p><%= @user.bio %></p>
    
    <p><b>author | date</b></p>   
    <p><%= @user.bio %></p>
  </div>
    
</div>


<% if @user != current_user %>
  <div class="bh-button-sticky-bottom">
    <%= link_to "Request a Meetup", new_user_meetup_path(@user), class: "bh-btn-solid-lg-sticky" %>
  </div>
<% else %>
  <p><%= link_to "Edit #{@user.first_name}'s profile", edit_user_path(@user) %></p>
<% end %>

<div class="container">
  <h1Your account details</h1>
  <%= image_tag @user.photo, alt: "user photo", class: "bh-avatar-lg" %>
  <br>
  <label for="display-lang">App display language</label>
  <select name="display-lang" id="display-lang">
    <option value="">English</option>
    <option value="">Français</option>
    <option value="">Español</option>
    <option value="">中文(简体)</option>
    <option value="">中文(繁体)</option>
    <option value="">日本語</option>
  </select>
  <p>Number of meetups attended:  <%= @user.num_of_past_meetups %></p>


  <h3>You're sharing</h3>

  <ul>
    <% @sharing_user_langs.each do |ul| %>
      <li><%= ul.language.name %> (<%= ul.proficiency_string %>) <%= link_to "delete", user_language_path(ul), method: :delete %></li>
    <% end %>
  </ul>

  <%= link_to new_user_language_path(ul_type: 'sharing') do %>
    <i class="fas fa-plus-circle"></i>
  <% end %>
  <br><br>
  <h3>You want to practice speaking</h3>
  <ul>
    <% @seeking_user_langs.each do |ul| %>
      <li><%= ul.language.name %> (<%= ul.proficiency_string %>) <%= link_to "delete", user_language_path(ul), method: :delete %></li>
    <% end %>
  </ul>

  <%= link_to new_user_language_path(ul_type: 'seeking') do %>
    <i class="fas fa-plus-circle"></i>
  <% end %>

</div>

  